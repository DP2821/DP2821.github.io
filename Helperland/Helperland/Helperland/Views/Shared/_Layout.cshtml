@model Helperland.Models.ViewModel.HomeViewModel
@{
    string? CurrentUserName = new CurrentLoggedInUser().GetName(Context.Request.Cookies["keepMeLoggedInToken"]);
    int? UserTypeID = new CurrentLoggedInUser().GetUserTypeId(Context.Request.Cookies["keepMeLoggedInToken"]);
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <!-- Jquey and AJAX -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js"></script>

    @*font-awesome *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/
    font-awesome/5.15.2/css/all.min.css" />
    <link href="~/assets/css/style.css" rel="stylesheet" runat="server" type="text/css" />
    <asp:contentPlaceholder id="css" runat="server" />

    @* <title>@ViewBag.Title</title> *@
</head>

<body>

    <header>
        <div class="nav-header-bg">

            <div class="main" id="home-main-nav">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index" title="Home">
                        <img class="img-logo" id="home-nav-logo" src="~/assets/images/logo-large.png" alt="">
                    </a>
                </div>

                <nav class="navbar navbar-expand-xl navbar-dark navbar-top" id="nav-menu">

                    <div class="container-fluid nav-1 ">
                        <div class="nav-btn">
                            <button style="float: right;" class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapsibleNavbar">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>

                        <div class="collapse navbar-collapse" id="collapsibleNavbar">
                            <div class="nav-ul-vertical-list">
                                <ul class="navbar-nav">
                                    @if (UserTypeID != 2 && UserTypeID != 3)
                                    {
                                        <li class="nav-item text-white book-a-cleaner blue-rounded-btn">
                                            <a class="nav-link text-white" asp-controller="Customer"
                                            asp-action="BookService">Book a Cleaner</a>
                                        </li>
                                    }
                                    <li class="nav-item text-white prices">
                                        <a class="nav-link text-white" asp-controller="Home"
                                            asp-action="Prices">Prices</a>
                                    </li>
                                    <li class="nav-item text-white our-guarantee">
                                        <a class="nav-link text-white" href="#">Our Guarantee</a>
                                    </li>
                                    <li class="nav-item text-white blog">
                                        <a class="nav-link text-white" href="#">Blog</a>
                                    </li>
                                    <li class="nav-item text-white contact-us">
                                        <a class="nav-link text-white" asp-controller="Home"
                                            asp-action="Contact">Contact Us</a>
                                    </li>
                                    @if (@CurrentUserName == null)
                                    {
                                        <li class="nav-item text-white login blue-rounded-btn">
                                            <a style="cursor: pointer" class="nav-link text-white" data-bs-toggle="modal"
                                            data-bs-target="#loginModal" id="loginbtn">Login</a>
                                        </li>
                                        <li class="nav-item text-white become-a-helper blue-rounded-btn">
                                            <a asp-controller="Account" asp-action="BecomeProvider"
                                            class="nav-link text-white">
                                                Become
                                                a Helper
                                            </a>
                                        </li>
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" role="button"
                                            data-bs-toggle="dropdown"><img src="./assets/images/ic-flag.png" alt="">
                                                <img src="./assets/images/sp-arrow-down.png" alt=""></a>

                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="#">
                                                        <img src="./assets/images/in-img.bmp" alt="">
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#">
                                                        <img src="./assets/images/au-img.bmp" alt="">
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#">
                                                        <img src="./assets/images/us-img.bmp" alt="">
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" role="button"
                                            data-bs-toggle="dropdown"><img src="./assets/images/ic-flag.png" alt="">
                                                <img src="./assets/images/sp-arrow-down.png" alt=""></a>

                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="#">
                                                        <img src="./assets/images/in-img.bmp" alt="">
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#">
                                                        <img src="./assets/images/au-img.bmp" alt="">
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#">
                                                        <img src="./assets/images/us-img.bmp" alt="">
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li>
                                            <img src="./assets/images/icon-notification.png" data-count="2" class="notiicon"
                                            alt="">
                                        </li>
                                        <!-- new Popover -->
                                        <li class="nav-item">
                                            <div class="popover__wrapper">
                                                <img src="~/assets/images/user.png" class="usericon mt-auto mb-auto" alt="" id="myPopover"
                                                data-bs-toggle="popover">
                                                @* <i class="fas fa-chevron-down" id="myPopover" data-bs-toggle="popover"></i> *@
                                                <img style="transform: rotate(180deg);" width="15px" src="~/assets/images/forma-1.png" alt="">

                                                <div class="popover__content">
                                                    <p class="ps-3 pe-3">
                                                        <small>Welcome</small>
                                                        <b>@CurrentUserName</b>
                                                    </p>
                                                    <hr>
                                                    @if (UserTypeID == new GlobalData().CustomerTypeId)
                                                    {
                                                        <ul class="ps-0 popover-ul">
                                                            <li>
                                                                <a class="nav-link" asp-action="ServiceHistory"
                                                            asp-controller="Customer">
                                                                    <span>My&nbsp;Dashboard</span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="nav-link" asp-action="ServiceHistory"
                                                            asp-controller="Customer" asp-route-my-account="true"
                                                            id="pop-over-my-setting-a-tag">
                                                                    <span>My&nbsp;Settings</span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="nav-link" asp-action="LogOut" asp-controller="Account">
                                                                    <span>Logout</span>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    }
                                                    else if (UserTypeID == new GlobalData().SpTypeId)
                                                    {
                                                        <ul class="ps-0 popover-ul">
                                                            <li>
                                                                <a class="nav-link" asp-action="Dashboard"
                                                            asp-controller="ServiceProvider">
                                                                    <span>My&nbsp;Dashboard</span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="nav-link" asp-action="Dashboard"
                                                            asp-controller="ServiceProvider" asp-route-my-account="true"
                                                            id="pop-over-my-setting-a-tag">
                                                                    <span>My&nbsp;Settings</span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="nav-link" asp-action="LogOut" asp-controller="Account">
                                                                    <span>Logout</span>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    }
                                                    else if (UserTypeID == new GlobalData().AdminTypeId)
                                            {
                                                <ul class="ps-0 popover-ul">
                                                    <li>
                                                        <a class="nav-link" asp-action="ServiceRequests"
                                                    asp-controller="Admin">
                                                            <span>Dashboard</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="nav-link" asp-action="LogOut" asp-controller="Account">
                                                            <span>Logout</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            }
                                                </div>
                                            </div>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </div>
                    </div>

                </nav>
            </div>

            @RenderSection("headerBgAndContent", required: false)
        </div>
    </header>

    <section>
        <!-- Login Modal -->
        <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content" id="login-modal-width" style="max-width: 320px; margin-left: 100px;">
                    <div class="container mt-3 ms-1" style="display: flex;">
                        <h4 class="modal-title" id="exampleModalLabel">Login to your account</h4>
                        <button style="margin-left: auto;" type="button" class="btn-close pt-2" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body mt-3">
                        <form asp-controller="Account" asp-action="Login" method="post">

                            <div class="mb-3">
                                <div class="login-email">
                                    <input asp-for="Login.Email" type="email" class="border-0 form-control pt-2 pb-2"
                                        id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
                                    <i style="font-size: x-large;" class="fa fa-user icon mt-auto mb-auto pe-1"></i>
                                </div>
                                <span asp-validation-for="Login.Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <div class="login-password">
                                    <input asp-for="Login.Password" type="password"
                                        class="border-0 form-control pt-2 pb-2" id="exampleInputPassword1"
                                        placeholder="Password">
                                    <i style="font-size: x-large;" class="fa fa-lock icon mt-auto mb-auto pe-1"></i>
                                </div>
                                <span asp-validation-for="Login.Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Remember me</label>
                            </div>
                            <button type="submit" class="modal-btn">Login</button>
                        </form>
                    </div>
                    <div class="container text-center mt-3">
                        <a href="#" class="modallink" data-bs-toggle="modal" data-bs-target="#forgotPassModal">
                            Forgot
                            password?
                        </a>
                        <p>Don't have an account? <a asp-controller="Account" asp-action="SignUp"
                                class="modallink">Create an account</a></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Forgot Password Modal -->
        <div class="modal fade" id="forgotPassModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content" id="forgot-modal-width" style="max-width: 320px; margin-left: 100px;">
                    <div class="container mt-3 ms-1" style="display: flex;">
                        <h4 class="modal-title" id="exampleModalLabel">Login to your account</h4>
                        <button style="margin-left: auto;" type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body mt-3">
                        <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                            <div class="login-email">
                                <input asp-for="Forgot.Email" type="email" class="border-0 form-control pt-2 pb-2"
                                    id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email Address">
                            </div>
                            <span asp-validation-for="Forgot.Email" class="text-danger"></span>
                            <button type="submit" class="modal-btn mt-3">Send</button>
                        </form>
                    </div>
                    <div class="container text-center mb-3">
                        <a href="#" class="modallink" data-bs-toggle="modal" data-bs-target="#loginModal">login now</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div>
        @RenderBody()
    </div>


    <footer>
        <div class="footer-main">
            <div class="container">
                <div class="row">
                    <div class="col-lg-1 col-md-1 col-12 footer-logo text-center">
                        <a asp-controller="Home" asp-action="Index">
                            <img class="" src="~/assets/images/logo-large.png" alt="" width="100px">
                        </a>
                    </div>
                    <div class="col-lg-10 col-md-10 col-12 text-center mt-3 mb-3">
                        <div class="row justify-content-center">
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" asp-controller="Home" asp-action="Index"
                                    title="Home">Home</a>

                            </div>
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" asp-controller="Home" asp-action="About"
                                    title="About">About</a>

                            </div>
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" href="#" title="Testimonials">Testimonials</a>

                            </div>
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" asp-controller="Home" asp-action="Faq" title="FAQs">FAQs</a>

                            </div>
                            <div class="col-12 col-lg-auto">

                                <a class="footer-list-item" href="#" title="Insurance Policy">Insurance Policy</a>
                            </div>
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" href="#" title="Impressum">Impressum</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1 col-md-1 col-12 text-center mt-3">
                        <img src="~/assets/images/fb-img.svg" alt="">
                        <img class="ms-lg-3 ms-md-0 ms-3" src="~/assets/images/insta-img.svg" alt="">
                    </div>

                </div>
                <hr style="background-color: #424242;">
                <div class="text-center">
                    <span style="color: #737381;">
                        ©2018Helperland. All rights reserved. &nbsp;&nbsp;&nbsp; Terms and Conditions | Privacy Policy
                    </span>
                </div>
            </div>
        </div>

    </footer>

@* Custome Alert *@
    <section>
        <a href="#" class="modallink d-none" data-bs-toggle="modal" data-bs-target="#custom-alert-modal"
            id="custom-alert-modal-link"></a>
        <div class="modal fade" id="custom-alert-modal" tabindex="-1" aria-labelledby="customAlertModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content" style="max-width: 350px; margin-left: 100px;">

                    <div class="container mt-3 ms-1 d-flex">
                        <button type="button" class="btn-close ms-auto" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="text-center">
                            <div class="rounded-circle d-inline-block bg-success" style="width: 60px; height: 60px;" id="custom-alert-modal-arrow-div">
                                <p class="text-white fs-4 p-1 pt-2 pb-2 mt-1" id="custom-alert-modal-sign">✓</p>
                            </div>
                            <div id="custom-alert-modal-content-div">
                                <h4 class="mt-3 fw-normal" id="custom-alert-modal-alert-message">Alert message</h4>
                            </div>
                            <button type="button" class="modal-btn w-auto ps-4 pe-4" id="custom-alert-modal-btn-ok" data-bs-dismiss="modal"
                            aria-label="Close">Ok</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        function showSuccessAlertMessage(message){
            $("#custom-alert-modal-arrow-div").removeClass("bg-danger");
            $("#custom-alert-modal-arrow-div").addClass("bg-success");

            $("#custom-alert-modal-sign").html("✓");

            $("#custom-alert-modal-alert-message").html(message);
            
            document.getElementById("custom-alert-modal-link").click();
        }

        function showErrorAlertMessage(message){
            $("#custom-alert-modal-arrow-div").removeClass("bg-success");
            $("#custom-alert-modal-arrow-div").addClass("bg-danger");

            $("#custom-alert-modal-sign").html("✕");

            $("#custom-alert-modal-alert-message").html(message);

            document.getElementById("custom-alert-modal-link").click();
        }
    </script>

    <asp:contentPlaceholder id="script" runat="server" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
