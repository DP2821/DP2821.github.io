<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>


    <link href="~/assets/css/style.css" rel="stylesheet" runat="server" type="text/css"/>
    <asp:contentPlaceholder id="css" runat="server"/>

    <title>@ViewBag.Title</title>
</head>

<body>

    <header>
        <div class="nav-header-bg">

            <div class="main" id="home-main-nav">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index" title="Home">
                        <img class="img-logo" id="home-nav-logo" src="~/assets/images/logo-large.png" alt="">
                    </a>
                </div>

                <nav class="navbar navbar-expand-xl navbar-dark navbar-top" id="nav-menu">

                    <div class="container-fluid nav-1 ">
                        <div class="nav-btn">
                            <button style="float: right;" class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapsibleNavbar">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>

                        <div class="collapse navbar-collapse" id="collapsibleNavbar">
                            <div class="nav-ul-vertical-list">
                                <ul class="navbar-nav">
                                    <li class="nav-item text-white book-a-cleaner blue-rounded-btn">
                                        <a class="nav-link text-white" href="#">Book a Cleaner</a>
                                    </li>
                                    <li class="nav-item text-white prices blue-rounded-btn">
                                        <a class="nav-link text-white" asp-controller="Home" asp-action="Prices">Prices</a>
                                    </li>
                                    <li class="nav-item text-white our-guarantee">
                                        <a class="nav-link text-white" href="#">Our Guarantee</a>
                                    </li>
                                    <li class="nav-item text-white blog">
                                        <a class="nav-link text-white" href="#">Blog</a>
                                    </li>
                                    <li class="nav-item text-white contact-us">
                                        <a class="nav-link text-white" asp-controller="Home" asp-action="Contact">Contact Us</a>
                                    </li>
                                    <li class="nav-item text-white login blue-rounded-btn">
                                        <a class="nav-link text-white" data-bs-toggle="modal"
                                           data-bs-target="#loginModal" id="loginbtn">Login</a>
                                    </li>
                                    <li class="nav-item text-white become-a-helper blue-rounded-btn">
                                        <a asp-controller="Home" asp-action="BecomeProvider" class="nav-link text-white">
                                            Become
                                            a Helper
                                        </a>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" role="button"
                                           data-bs-toggle="dropdown"><img src="./assets/images/ic-flag.png" alt=""> <img src="./assets/images/sp-arrow-down.png" alt=""></a>

                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    <img src="./assets/images/in-img.bmp" alt="">
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    <img src="./assets/images/au-img.bmp" alt="">
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    <img src="./assets/images/us-img.bmp" alt="">
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </nav>
            </div>

            @RenderSection("headerBgAndContent", required: false)
        </div>
    </header>     

    <section>
        <!-- Login Modal -->
        <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content" style="max-width: 300px; margin-left: 100px;">
                    <div class="container mt-3 ms-1" style="display: flex;">
                        <h4 class="modal-title" id="exampleModalLabel">Login to your account</h4>
                        <button style="margin-left: auto;" type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body mt-3">
                        <form>
                            <div class="mb-3 login-email">
                                <input type="email" class="border-0 form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" placeholder="Email">
                                <i style="font-size: x-large;" class="fa fa-user icon mt-auto mb-auto pe-1"></i>
                            </div>
                            <div class="mb-3 login-password">
                                <input type="password" class="border-0 form-control" id="exampleInputPassword1"
                                       placeholder="Password">
                                <i style="font-size: x-large;" class="fa fa-lock icon mt-auto mb-auto pe-1"></i>
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Remember me</label>
                            </div>
                            <button type="submit" class="modal-btn">Login</button>
                        </form>
                    </div>
                    <div class="container text-center mt-3">
                        <a href="#" class="modallink" data-bs-toggle="modal" data-bs-target="#forgotPassModal">
                            Forgot
                            password?
                        </a>
                        <p>Don't have an account? <a asp-controller="Home" asp-action="SignUp" class="modallink">Create an account</a></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Forgot Password Modal -->
        <div class="modal fade" id="forgotPassModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content" style="max-width: 300px; margin-left: 100px;">
                    <div class="container mt-3 ms-1" style="display: flex;">
                        <h4 class="modal-title" id="exampleModalLabel">Login to your account</h4>
                        <button style="margin-left: auto;" type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body mt-3">
                        <form>
                            <div class="mb-3 login-email">
                                <input type="email" class="border-0 form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" placeholder="Email Address">
                            </div>
                            <button type="submit" class="modal-btn">Send</button>
                        </form>
                    </div>
                    <div class="container text-center mb-3">
                        <a href="#" class="modallink" data-bs-toggle="modal" data-bs-target="#loginModal">login now</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div>
        @RenderBody()
    </div>


    <footer>
        <div class="footer-main">
            <div class="container">
                <div class="row">
                    <div class="col-lg-1 col-md-1 col-12 footer-logo text-center">
                        <a asp-controller="Home" asp-action="Index">
                            <img class="" src="~/assets/images/logo-large.png" alt="" width="100px">
                        </a>
                    </div>
                    <div class="col-lg-10 col-md-10 col-12 text-center mt-3 mb-3">
                        <div class="row justify-content-center">
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" asp-controller="Home" asp-action="Index" title="Home">Home</a>

                            </div>
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" asp-controller="Home" asp-action="About" title="About">About</a>

                            </div>
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" href="#" title="Testimonials">Testimonials</a>

                            </div>
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" asp-controller="Home" asp-action="Faq" title="FAQs">FAQs</a>

                            </div>
                            <div class="col-12 col-lg-auto">

                                <a class="footer-list-item" href="#" title="Insurance Policy">Insurance Policy</a>
                            </div>
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" href="#" title="Impressum">Impressum</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1 col-md-1 col-12 text-center mt-3">
                        <img src="~/assets/images/fb-img.svg" alt="">
                        <img class="ms-lg-3 ms-md-0 ms-3" src="~/assets/images/insta-img.svg" alt="">
                    </div>

                </div>
                <hr style="background-color: #424242;">
                <div class="text-center">
                    <span style="color: #737381;">
                        ©2018Helperland. All rights reserved. &nbsp;&nbsp;&nbsp; Terms and Conditions  |  Privacy Policy
                    </span>
                </div>
            </div>
        </div>

    </footer>


    <asp:contentPlaceholder id="script" runat="server" />

</body>
</html>
