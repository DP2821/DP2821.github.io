@{
    ViewData["Title"] = "Become a Service Provider";
}
<asp:content contentplaceholder id="css" runat="server">
    <link href="~/assets/css/service-provider-become-a-provider.css" rel="stylesheet" />
</asp:content>

@section headerBgAndContent{
<section>
    <div><br></div>

    <div class=" container register-now mb-5">
        <h4 class="text-center pt-3 mb-4">Register Now!</h4>
        <form action="">
            <div class="row justify-content-center">
                <div class="col">
                    <input type="text" class="form-control mb-3" placeholder="First name"
                           id="first-name-be-a-pro">
                    <input type="text" class="form-control mb-3" placeholder="Last name"
                           id="last-name-be-a-pro">
                    <input type="email" class="form-control mb-3" placeholder="Email Address"
                           id="email-be-a-pro">
                    <div class="input-group mb-3 input-number">
                        <span class="input-group-text" id="basic-addon1">+46</span>
                        <input type="number" class="form-control" placeholder="Phone Number"
                               id="phone-be-a-pro">
                    </div>
                    <input type="password" class="form-control mb-3" placeholder="Password"
                           id="password-be-a-pro">
                    <input type="password" class="form-control mb-2" placeholder="Confirm Password"
                           id="confirm-password-be-a-pro">
                    <div class="form-check mb-2 input-check">
                        <input class="form-check-input" type="checkbox" value="" id="send-news">
                        <label class="form-check-label" for="send-news">
                            Send me newsletters from Helperland
                        </label>
                    </div>
                    <div class="form-check mb-2 input-check">
                        <input class="form-check-input" type="checkbox" value="" id="terms">
                        <label class="form-check-label" for="terms">
                            I accept <span class="text-blue">terms and conditions</span> & <span class="text-blue">privacy policy</span>
                        </label>
                    </div>
                    <div class="form-check captcha mb-2 input-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            &nbsp; I'm not a robot <img src="./assets/images/RecaptchaLogo.png" alt=""
                                                        width="32px">
                        </label>
                    </div>
                    <div class="text-center pb-3 mt-3">
                        <a href="" class="blue-btn text-white text-center">
                            Get Started&nbsp; <img src="./assets/images/arrow-white.png" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="text-center pb-5">
        <img class="down-arrow-img" src="./assets/images/group-18_5.png" alt="">
    </div>
</section>
}


