@{
    ViewData["Title"] = "Faqs";
    Layout = "_StaticLayout";
}
<asp:content contentplaceholder id="css" runat="server">
    <link href="~/assets/css/faq.css" rel="stylesheet" />
</asp:content>

<!-- Banner -->
<section>
    <div>
        <img class="faq-banner" src="./assets/images/faq-banner.png" alt="" />
    </div>
</section>

<!-- FAQs -->
<section>
    <div class="container">
        <div class="row justify-content-center text-center">
            <h2>FAQs</h2>
        </div>
        <div class="text-center">
            <hr class="star-hr">
            <img style="margin-bottom: 24px;" class="text-center" src="./assets/images/forma-1-copy-5.png" alt="">
            <hr class="star-hr">
        </div>
    </div>
</section>

<!-- Tabs list of FAQs -->
<section>
    <div class="container">
        <div class="row justify-content-center text-center">
            <p>
                Whether you are Customer or Service provider,<br />
                We have tried our best to solve all your queries and questions.
            </p>
        </div>
        <div class="text-center">

            <ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab" role="tablist">
                <li class=" col-lg-4 col-sm-6 nav-item" role="presentation">
                    <button onclick="customerChangeColor()" class="nav-link active" id="pills-home-tab"
                            data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab"
                            aria-controls="pills-home" aria-selected="true">
                        FOR CUSTOMER
                    </button>
                </li>
                <li class=" col-lg-4 col-sm-6 nav-item" role="presentation">
                    <button onclick="serviceChangeColor()" class="nav-link" id="pills-profile-tab"
                            data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab"
                            aria-controls="pills-profile" aria-selected="false">
                        FOR SERVICE PROVIDER
                    </button>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab"></div>

                <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab"></div>
            </div>

        </div>
    </div>
</section>


<!-- Get our newsletter -->
<section>
    <div class="row mt-3 bottom-two-btn">
        <div class="col-6">
            <div class="ps-4">
                <a href="#">
                    <img class="arrow-up" src="~/assets/images/arrow-up-circle-border.bmp" alt="">
                </a>
            </div>
        </div>
        <div class="col-6 text-end">
            <div class="pe-4">
                <img src="~/assets/images/layer-598.png" alt="">
            </div>
        </div>
    </div>
    <div class="row justify-content-center get-our-newsletter">
        <div class="col col-auto get-our-newslwtter">
            <h6>GET OUR NEWSLWTTER</h6>
        </div>
    </div>
    <div class="row justify-content-center enter-your-mail-and-submit mb-5">
        <div class="col col-auto">
            <form class="row g-3">
                <div class="col-12 text-center col-sm-auto">
                    <label for="inputEmail" class="visually-hidden">E-mail</label>
                    <input type="email" class="form-control email m-0" id="inputEmail" placeholder="YOUR EMAIL">
                </div>
                <div class="col-12 text-center col-sm-auto">
                    <button type="submit" class="btn btn-primary mb-3 btn-submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</section>

<script src="~/assets/js/faq.js"></script>
