<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    <asp:contentPlaceholder id="css" runat="server" />
    <link rel="stylesheet" href="~/assets/css/style.css">
    <title>@ViewBag.Title</title>
</head>

<body>


    <div class="main ">
        <div class="logo">
            <a asp-controller="Home" asp-action="Index" title="Home">
                <img class="img-logo" src="~/assets/images/logo-small.png" alt="">
            </a>
        </div>

        <nav class="navbar navbar-expand-lg navbar-dark navbar-top">

            <div class="container-fluid nav-1">
                <div class="nav-btn">
                    <button style="float: right;" class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapsibleNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <div class="nav-ul-vertical-list">
                        <ul class="navbar-nav">
                            <li class="nav-item text-white book-a-cleaner blue-rounded-btn">
                                <a class="nav-link text-white" href="#">Book now</a>
                            </li>
                            <li class="nav-item text-white prices blue-rounded-btn">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Prices">Prices & services</a>
                            </li>
                            <li class="nav-item text-white our-guarantee">
                                <a class="nav-link text-white" href="#">Warrenty</a>
                            </li>
                            <li class="nav-item text-white blog">
                                <a class="nav-link text-white" href="#">Blog</a>
                            </li>
                            <li class="nav-item text-white contact-us">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Contact">Contact</a>
                            </li>
                            <li class="nav-item text-white login blue-rounded-btn">
                                <a class="nav-link text-white" href="#">Login</a>
                            </li>
                            <li class="nav-item text-white become-a-helper blue-rounded-btn">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="BecomeProvider">
                                    Become
                                    a
                                    Helper
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </nav>
    </div>


    <div>
        @RenderBody()
    </div>

    <!-- Get our newsletter -->
    <section>
        <div class="row mt-3 bottom-two-btn">
            <div class="col-6">
                <div class="ps-4">
                    <a href="#">
                        <img class="arrow-up" src="~/assets/images/arrow-up-circle-border.bmp" alt="">
                    </a>
                </div>
            </div>
            <div class="col-6 text-end">
                <div class="pe-4">
                    <img src="~/assets/images/layer-598.png" alt="">
                </div>
            </div>
        </div>
        <div class="row justify-content-center get-our-newsletter">
            <div class="col col-auto get-our-newslwtter">
                <h6>GET OUR NEWSLWTTER</h6>
            </div>
        </div>
        <div class="row justify-content-center enter-your-mail-and-submit mb-5">
            <div class="col col-auto">
                <form class="row g-3">
                    <div class="col-12 text-center col-sm-auto">
                        <label for="inputEmail" class="visually-hidden">E-mail</label>
                        <input type="email" class="form-control email m-0" id="inputEmail" placeholder="YOUR EMAIL">
                    </div>
                    <div class="col-12 text-center col-sm-auto">
                        <button type="submit" class="btn btn-primary mb-3 btn-submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <footer>
        <div class="footer-main">
            <div class="container">
                <div class="row">
                    <div class="col-lg-1 col-md-1 col-12 footer-logo text-center">
                        <a asp-controller="Home" asp-action="Index">
                            <img class="" src="~/assets/images/logo-large.png" alt="" width="100px">
                        </a>
                    </div>
                    <div class="col-lg-10 col-md-10 col-12 text-center mt-3 mb-3">
                        <div class="row justify-content-center">
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" asp-controller="Home" asp-action="Index" title="Home">Home</a>

                            </div>
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" asp-controller="Home" asp-action="About" title="About">About</a>

                            </div>
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" href="#" title="Testimonials">Testimonials</a>

                            </div>
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" asp-controller="Home" asp-action="Faq" title="FAQs">FAQs</a>

                            </div>
                            <div class="col-12 col-lg-auto">

                                <a class="footer-list-item" href="#" title="Insurance Policy">Insurance Policy</a>
                            </div>
                            <div class="col-12 col-lg-auto">
                                <a class="footer-list-item" href="#" title="Impressum">Impressum</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1 col-md-1 col-12 text-center mt-3">
                        <img src="~/assets/images/fb-img.svg" alt="">
                        <img class="ms-lg-3 ms-md-0 ms-3" src="~/assets/images/insta-img.svg" alt="">
                    </div>

                </div>
                <hr style="background-color: #424242;">
                <div class="text-center">
                    <span style="color: #737381;">
                        ©2018Helperland. All rights reserved. &nbsp;&nbsp;&nbsp; Terms and Conditions  |  Privacy Policy
                    </span>
                </div>
            </div>
        </div>

    </footer>


    @*[Temporary for learning(Can be simply delete)]For predefined Razor page like edit create etc... *@
    @RenderSection("scripts", required: false)
</body>
</html>
